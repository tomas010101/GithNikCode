@page "/Editar_Foros"
@model Foromanager.Pages.Foros.EditModel

@{
    ViewData["Title"] = "Editar Foro";
}
<head>
    <link rel="stylesheet" href="~/css/Foros/BotonesForos.css" />
    <link rel="stylesheet" href="~/css/Foros/EditarForos.css" />
</head>


<h1>Editar @Html.DisplayFor(model => model.Nombre)</h1>
<div class="LimHr"><hr color="white" /></div>
<div class="row">
    <div class="col-md-4">
        <form enctype = "multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdForo" />
            
            <div class="form-group">
                <label class="control-label">Imagen</label>
                <input asp-for="ImgCargaForo" type="file" accept=".jpg, .png, .jpeg" />
            </div>
            
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control EditarInputs" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea asp-for="Descripcion" rows="5" cols="40" class="EditarInputs"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Banner</label>
                <input asp-for="ImgCargaBanner" type="file" accept=".jpg, .png, .jpeg" />
            </div>
            

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn BotonForos" />
            </div>
        </form>
    </div>
</div>

<div class="DivBotonExtra">
    <a asp-page="./Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
