@page
@model Foromanager.Pages.Foros.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Foro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Foro.ForoId" />
            <div class="form-group">
                <label asp-for="Foro.Nombre" class="control-label"></label>
                <input asp-for="Foro.Nombre" class="form-control" />
                <span asp-validation-for="Foro.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foro.Descripcion" class="control-label"></label>
                <textarea asp-for="Foro.Descripcion" rows="5" cols="40"></textarea>
                <span asp-validation-for="Foro.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foro.Categorias" class="control-label"></label>
                <input asp-for="Foro.Categorias" class="form-control" />
                <span asp-validation-for="Foro.Categorias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foro.Fecha" class="control-label"></label>
                <input asp-for="Foro.Fecha" class="form-control" />
                <span asp-validation-for="Foro.Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
