@page
@model Foromanager.Pages.Foros.CreateModel

@{
    ViewData["Title"] = "Create";
}
<head>
    <link rel="stylesheet" href="~/css/Foros/BotonesForos.css" />
    <link rel="stylesheet" href="~/css/Foros/CreateForos.css" />
</head>


<h1>Nuevo Foro</h1>

<div class="LimHr"><hr color="white" /></div>
<div class="row">
    <div class="col-md-4">
        <form enctype = "multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Foro.Nombre" class="control-label"></label>
                <input asp-for="Foro.Nombre" class="form-control" />
                <span asp-validation-for="Foro.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foro.Descripcion" class="control-label"></label>
                <input asp-for="Foro.Descripcion" class="form-control" />
                <span asp-validation-for="Foro.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categorias" class="control-label"></label>
                <input asp-for="Categorias" class="form-control" type="text"/>
            </div>

             <input asp-for="ImgCargaForo" type="file" name="imagen" accept=".jpg, .png, .jpeg" /> 

            <div class="form-group">

                <input type="submit" value="Crear" class="btn BotonForos" />
            </div>
        </form>

        @if (ViewData["Message"] != null)
        {
            <script type="text/javascript">
                window.onload = function () {
                    alert("@ViewData["Message"]");
                };
            </script>
         }
    </div>
</div>

<div class="DivBotonExtra">
    <a asp-page="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
