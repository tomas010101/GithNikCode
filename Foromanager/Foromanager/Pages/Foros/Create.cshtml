@page 
@model Foromanager.Pages.Foros.CreateModel

@{
    ViewData["Title"] = "Crear";
}
<head>
    <link rel="stylesheet" href="~/css/Foros/BotonesForos.css" />
    <link rel="stylesheet" href="~/css/Foros/CreateForos.css" />
    <link rel="stylesheet" href="~/css/InputFileStyle.css" />
</head>


<h1 class="Espaciado">Nuevo Foro</h1>

<div class="LimHr"><hr color="white" /></div>
<div class="Divwidth Espaciado">
    <div class="Divwidth">
        <form enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group inputwidth">
                <label class="control-label">Imagen</label>
                <br />
                <label class="Aviso">Se recomienda que la Imagen del Banner sea de 1200px x 600px (No obligatorio)</label>
                <br />
                <input id="file" class="InputFile" asp-for="ImgCargaForo" type="file" name="imagen" accept=".jpg, .png, .jpeg" />
                <label class="BotonImagen" for="file"> <i class="fas fa-upload"></i> Subir Imagen</label>
            </div>
            <div class="form-group inputwidth">
                <label asp-for="Foro.Nombre" class="control-label"></label>
                <br />
                <input asp-for="Foro.Nombre" class="form-control" />
                <br />
                <span asp-validation-for="Foro.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group inputwidth">
                <label asp-for="Foro.Descripcion" class="control-label"></label>
                <br />
                <input asp-for="Foro.Descripcion" class="form-control" />
                <br />
                <span asp-validation-for="Foro.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group inputwidth">
                <label asp-for="Categorias" class="control-label"></label>
                <br />
                <label class="Aviso">Para crear mas de una categoria, utilice como separador al caracter "-"</label>
                <br />
                <input asp-for="Categorias" class="form-control" type="text" />
            </div>

            <div class="form-group inputwidth">
                <label class="control-label">Banner</label>
                <br />
                <label class="Aviso">Se recomienda que la Imagen del Banner sea de 1200px x 400px (No obligatorio)</label>
                <br />
                <input id="file" class="InputFile" asp-for="ImgCargaBanner" type="file" name="imagenBanner" accept=".jpg, .png, .jpeg" />
                <label class="BotonImagen" for="file"> <i class="fas fa-upload"></i> Subir Imagen</label>
            </div>
            

            <div class="form-group">
                <input type="submit" value="Crear" class="btn BotonForos" />
                <a asp-page="Index">Regresar</a>
            </div>
        </form>

        @if (ViewData["Message"] != null)
        {
            <script type="text/javascript">
                window.onload = function () {
                    alert("@ViewData["Message"]");
                };
            </script>
         }
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
