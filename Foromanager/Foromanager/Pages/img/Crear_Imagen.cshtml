@page
@model Foromanager.Pages.img.Crear_ImagenModel

@{
    ViewData["Title"] = "Crear_Imagen";
}

<h1>Crear_Imagen</h1>

<h4>Imagenes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Imagenes.ImagenNombre" class="control-label"></label>
                <input asp-for="Imagenes.ImagenNombre" class="form-control" />
                <span asp-validation-for="Imagenes.ImagenNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgCarga" class="control-label"></label>
                <input asp-for="ImgCarga" class="form-control" />
                <span asp-validation-for="ImgCarga" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imagenes.PublicacionID" class="control-label"></label>
                <select asp-for="Imagenes.PublicacionID" class ="form-control" asp-items="ViewBag.PublicacionID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
