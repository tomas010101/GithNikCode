@page
@model Foromanager.Pages.Publicaciones.EditModel


@{
    ViewData["Title"] = "Editar";
}

<head>
    <link rel="stylesheet" href="~/css/Publicaciones/EliminaryEditar.css" />
    <link rel="stylesheet" href="~/css/Foros/BotonesForos.css" />
</head>

<h1 class="Espaciado">Editar</h1>


<h4 class="Espaciado">Publicacion</h4>

<div class="LimHr"><hr color="white" /></div>

<div class="row Espaciado">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Publicacion.Titulo" class="control-label"></label>
                <input asp-for="Publicacion.Titulo" class="form-control" />
                <span asp-validation-for="Publicacion.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Publicacion.Descripcion" class="control-label"></label>
                <input asp-for="Publicacion.Descripcion" class="form-control" />
                <span asp-validation-for="Publicacion.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Publicacion.PublicacionId" />
                <input type="hidden" asp-for="Publicacion.ForoId" />
                <input type="submit" value="Guardar" class="btn BotonForos" />
                <a asp-page="../Foros/Index">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
